{
  "name": "basic",
  "version": "0.1.0",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "build:testConfig": "cypress-firebase createTestEnvFile",
    "test": "npm run build:testConfig && cross-env CYPRESS_baseUrl=http://localhost:3000 cypress run",
    "test:ui": "npm run build:testConfig && cross-env CYPRESS_baseUrl=http://localhost:3000 cypress open"
  },
  "dependencies": {
    "firebase": "^7.8.0",
    "lodash": "^4.17.15",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "cypress": "^3.8.3",
    "cypress-firebase": "*",
    "eslint-plugin-cypress": "^2.0.1",
    "react-scripts": "3.3.1",
    "firebase-tools": "^7.12.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "private": true,
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
