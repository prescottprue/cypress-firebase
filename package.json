{
  "name": "cypress-firebase",
  "version": "0.2.0",
  "description": "Utilities to help testing Firebase projects with Cypress.",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "jsnext:main": "es/index.js",
  "scripts": {
    "clean": "rimraf lib dist",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build": "npm run build:commonjs && npm run build:es",
    "watch": "npm run build:commonjs -- --watch",
    "watch:es": "npm run build:es -- --watch",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run clean && npm run build",
    "prepush": "npm run lint"
  },
  "bin": {
    "cypress-firebase": "./bin/cypress-firebase"
  },
  "peerDependencies": {
    "firebase-tools": "^6 || ^7"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "figures": "^3.0.0",
    "firebase-admin": "^8.2.0",
    "firebase-tools-extra": "0.1.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "babel-eslint": "^10.0.1",
    "babel-plugin-lodash": "^3.3.4",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "firebase-tools": "^7.0.2",
    "husky": "^3.0.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3"
  },
  "keywords": [
    "cypress",
    "cypress-plugin",
    "firebase",
    "testing"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prescottprue/cypress-firebase.git"
  },
  "bugs": {
    "url": "https://github.com/prescottprue/cypress-firebase/issues"
  },
  "author": {
    "name": "Prescott Prue",
    "url": "https://github.com/prescottprue"
  },
  "files": [
    "bin",
    "cmds",
    "lib",
    "es"
  ]
}
